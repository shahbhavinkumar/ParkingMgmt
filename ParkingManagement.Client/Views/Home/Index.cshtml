@using Shared;
@inject IApiClient _client;


<style>
    .parent {
        display: grid;
        grid-column-gap: 10px;
        grid-row-gap: 10px;
    }

    .modal {
        position: absolute;
        float: left;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
    }

    .inputInfo {
        grid-area: 1 / 1 / 2 / 2;
    }

    .displayDetails {
        grid-area: 1 / 2 / 2 / 3;
    }

    .errorDisplay {
        grid-area: 2 / 1 / 3 / 3;
    }

    .inputInfo {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-bottom: 10px;
    }

    .label {
        margin-bottom: 5px;
    }

    input[type="text"] {
        padding: 5px;
        width: 30%;
        margin-bottom: 5px;
    }

    .button-container {
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    button, input[type="button"] {
        padding: 5px 10px;
        margin-right: 5px;
    }

    #button_stats {
        margin-top: 10px;
    }

</style>

<div class="parent">
    <div class="inputInfo">@Html.Partial("Input")</div>
   
    <div class="displayDetails"></div>
    <div class="errorDisplay"></div>

</div>


<div id="myModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Vehicle Report</h5>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>




