    double hourlyFee = Double.Parse(ConfigurationManager.AppSetting["Configs:hourlyFee"]);
    int availableSpots = Spots.SpotsAvailable;
    int currentTotalSpots = Model.ToList().Count;
}

Available spots : @Spots.SpotsAvailable
